<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="20dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp">

    <!--SISI KIRI-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal"
        android:background="@drawable/card_view_border">

        <!--Nama Mall-->
        <TextView
            android:id="@+id/tvMallNameNPL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Mall"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <!--Kendaraan-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMallNameNPL"
            android:orientation="vertical"
            android:layout_gravity="center">

            <!--Motor-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivMotorcycleNPL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_directions_bike_24"
                    app:tint="@color/main_color"/>

                <TextView
                    android:id="@+id/tvMotorcycleNPL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="5dp"
                    android:text="motor"
                    android:textStyle="bold"
                    android:textColor="@color/main_color"/>
            </LinearLayout>

            <!--Mobil-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivCarNPL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_directions_car_24"
                    app:tint="@color/main_color"/>

                <TextView
                    android:id="@+id/tv_car_npl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:gravity="bottom"
                    android:text="mobil"
                    android:textColor="@color/main_color"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <!--SISI KANAN-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDistanceNPL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Distance"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/ivDistanceNPL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_location_on_24"
                app:tint="@color/black" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>