<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="20dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp">

    <!--SISI KIRI-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal"
        android:background="@drawable/card_view_border">

        <!--Nama Mall-->
        <TextView
            android:id="@+id/tvMallNameCP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Mall"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <!--Deskripsi dibawah judul-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMallNameCP"
            android:orientation="vertical"
            android:layout_gravity="center">

            <!--Payment Method-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivPaymentMethodCP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_credit_card_24"
                    app:tint="@color/main_color"/>

                <TextView
                    android:id="@+id/tvPaymentMethodCP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="5dp"
                    android:text="Payment Method"
                    android:textColor="@color/main_color"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!--Starts from (waktu)-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivTimeCP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_access_time_24"
                    app:tint="@color/main_color"/>

                <TextView
                    android:id="@+id/tvTimeCP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="5dp"
                    android:text="Starts from 10.30 AM"
                    android:textColor="@color/main_color"
                    android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <!--SISI KANAN-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/tvVehicleTypeCP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="3dp"
                android:text="Vehicle Type"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/ivParkingIconCP"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_local_parking_24"
                app:tint="@color/black"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>