<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@drawable/card_view_border"
    android:outlineAmbientShadowColor="@color/cardview_shadow_end_color">

    <!--SISI KIRI-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <!--Nama Mall-->
        <TextView
            android:id="@+id/tvMallNameBP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Mall"
            android:textStyle="bold"/>

        <!--Deskripsi dibawah judul-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMallNameBP"
            android:orientation="vertical"
            android:layout_gravity="center">

            <!--Payment Method-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivPaymentMethodBP"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_credit_card_24"
                    app:tint="@color/main_color"/>

                <TextView
                    android:id="@+id/tvPaymentMethodCP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Payment Method" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <!--SISI KANAN-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/tvVehicleTypeBP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Vehicle Type"/>

            <ImageView
                android:id="@+id/ivParkingIconBP"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_local_parking_24"
                app:tint="@color/main_color"/>

        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>